<% provide(:title, 'edit Task') %>

<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
     <%= form_with(model: @task, url: user_tasks_path(@user,@task), method: :patch, local: true) do |f| %>
      <%= render partial: 'shared/error_messages' %>

      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description, class: "label-form" %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>

      <%= f.submit "更新", class: "btn btn-default1 btn-primary btn-form" %>
      <%= f.submit "キャンセル", class: "btn btn-default btn-default btn-form" %>
    <% end %>
  </div>
</div>